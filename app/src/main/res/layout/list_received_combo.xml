<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/combo_card_cv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sprinkle"
            >

            <TextView
                android:id="@+id/reward_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="COMBO"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sub_header_size" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reward_image_cv"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/idli_dosa" />


            <TextView
                android:id="@+id/combo_descp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reward_image_cv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="2 Idlis-1 Dosa"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

<Button
    android:id="@+id/redeem_combo_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/combo_card_cv"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:text="@string/redeem_combo"
    android:textColor="@color/colorAccent"
    android:padding="10dp"
    android:background="@drawable/button_grey"
    android:backgroundTint="@color/colorPrimary"
    android:layout_marginTop="10dp"/>

</RelativeLayout>
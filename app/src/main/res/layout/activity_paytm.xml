<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home_page.fragments.CheckoutFragment">

    <TextView
        android:id="@+id/trns_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/paytmLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/paytm_logo"
        android:layout_marginTop="@dimen/dimen_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trns_txt"/>


    <TextView
        android:id="@+id/moneyTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Money Transfer"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paytmLogo"/>

    <TextView
        android:id="@+id/paymtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$1"
        android:fontFamily="@font/averia_sans_libre"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moneyTransfer"/>

    <Button
        android:id="@+id/paytmPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to pay"
        android:background="#00b9f5"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_22dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
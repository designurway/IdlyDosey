<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.home_page.fragments.SupportFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/support_details_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:elevation="2dp"
        android:background="@color/light_gray_a9a9a9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/aboutLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/logonew"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dimen_3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/aboutCompTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idily Dosey"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aboutLogo"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 2.1"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aboutCompTitle"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        android:elevation="2dp"
        android:background="@color/light_gray_a9a9a9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/support_details_cv"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/companyIcon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/company"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cmp_address"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toEndOf="@id/companyIcon"
                app:layout_constraintTop_toTopOf="@id/companyIcon"
                app:layout_constraintBottom_toBottomOf="@id/companyIcon"
                app:layout_constraintEnd_toEndOf="parent"/>



            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/companyIcon"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toEndOf="@id/callIcon"
                app:layout_constraintTop_toTopOf="@id/callIcon"
                app:layout_constraintBottom_toBottomOf="@id/callIcon"
                app:layout_constraintEnd_toEndOf="parent"/>



            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/callIcon"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="designurwaycmn@gmail.com"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toEndOf="@id/mailIcon"
                app:layout_constraintTop_toTopOf="@id/mailIcon"
                app:layout_constraintBottom_toBottomOf="@id/mailIcon"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2020 Idily Dosey"
                android:textColor="@color/Darkgrey"
                android:textSize="@dimen/dimen_18dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
              app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
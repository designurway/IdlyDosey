<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.fragment.ReferalCodeFragment">

    <ImageView
        android:id="@+id/curve_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/login_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/app_logo_here"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/curve_bg"
        app:layout_constraintBottom_toBottomOf="@id/curve_bg"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/referral_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo_here"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:hint="Referral Code"
        android:textSize="20sp"
        app:hintTextColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/curve_bg">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/referral_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:singleLine="true" />

</com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_referral_code_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_code_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_curve_bg"
        android:text="submit"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/referral_code_tv"/>

    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_referral_code_btn"
        android:text="@string/skip"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/sub_header_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit_referral_code_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
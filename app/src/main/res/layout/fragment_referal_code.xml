<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.fragment.ReferalCodeFragment">


    <TextView
        android:id="@+id/referaal_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Enter Referral Code"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_mono"
        android:textSize="@dimen/dimen_20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/otp_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/referral_icon"
        android:layout_marginTop="@dimen/dimen_60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/referaal_txt"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the referral code"
        android:gravity="center"
        android:textSize="@dimen/dimen_17sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_img"/>

    <TextView
        android:id="@+id/otpNumTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="you have"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/dimen_17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>



    <EditText
        android:id="@+id/referral_code_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sign_in_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/curved_edge"
        android:drawableTint="@color/colorPrimary"
        android:elevation="2dp"
        android:fontFamily="@font/basic"
        android:hint="Referral Code"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="@dimen/dimen_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/reg_et_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpNumTxt"/>


    <Button
        android:id="@+id/submit_referral_code_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/blue_curve_bg"
        android:fontFamily="@font/ubuntu_mono"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="true"
        android:text="Proceed"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sub_header_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/referral_code_et"
        app:layout_constraintEnd_toEndOf="@id/referral_code_et"
        app:layout_constraintTop_toBottomOf="@id/referral_code_et"/>

    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_referral_code_btn"
        android:text="@string/skip"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/sub_header_size"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit_referral_code_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home_page.fragments.ReceiveComboFragment"
    android:id="@+id/layout_rl"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/img_sad_face"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sad_face"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:backgroundTint="@color/grey"/>

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/img_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/referred" />

        <TextView
            android:id="@+id/received_combo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_iv"
            android:text="@string/pick_reward"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sub_header_size" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rewards_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_rl"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a.activity.ReferralCodeActivity">

    <RelativeLayout
        android:id="@+id/first_ll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/login_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_cv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logonew" />


    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/referral_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_ll"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:hint="Referral Code"
        android:textSize="20sp"
        app:hintTextColor="@color/colorBlack">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/referral_code_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:singleLine="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_referral_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_code_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_curve_bg"
        android:text="submit"
        android:textColor="@color/colorAccent" />

<TextView
    android:id="@+id/skip_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/submit_referral_code_btn"
    android:text="@string/skip"
    android:textAlignment="center"
    android:layout_marginTop="20dp"
    android:textSize="@dimen/sub_header_size"
    android:textColor="@color/colorPrimary"/>


</RelativeLayout>





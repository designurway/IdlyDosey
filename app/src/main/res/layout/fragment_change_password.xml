<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home_page.fragments.ChangePasswordFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_chng_pwd_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <RelativeLayout
            android:id="@+id/admin_chng_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/old_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old_password"
                android:fontFamily="@font/averia_sans_libre"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>


            <EditText
                android:id="@+id/old_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/old_pwd_tv"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curved_edge"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/new_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                android:fontFamily="@font/averia_sans_libre"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/old_pwd_et"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>


            <EditText
                android:id="@+id/new_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_pwd_tv"
                android:maxLines="1"
                android:inputType="textPassword"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curved_edge"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/confirm_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:fontFamily="@font/averia_sans_libre"
                android:layout_below="@+id/new_pwd_et"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>



            <EditText
                android:id="@+id/confirm_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_pwd_tv"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/curved_edge"
                android:padding="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="@dimen/dash_board_txt_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/averia_sans_libre"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_curve_bg"/>

</RelativeLayout>